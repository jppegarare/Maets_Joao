<h1>Usuarios</h1>

<a href="/usuarios/novo"> Cadastrar Usuarios</a>

<table border="1">
    <tr>
        <td>ID</td>
        <td>Nickname</td>
        <td>Nome</td>
        <th></th>

    </tr>

    {{#each usuarios}}

        <tr>
            <td>{{ this.id }}</td>
            <td>{{ this.nickname }}</td>
            <td>{{ this.nome }}</td>
            <td>
                <a href="/usuarios/{{this.id}}/atualizar">Atualizar</a>

                <form action="/usuarios/excluir" method="post">
                  
                    <input type="hidden" value="{{this.id}}"/>
                    <input type="submit" value="Excluir"/>
                </form>
                <a href="/usuarios/{{this.id}}/cartoes">Cartoes</a>
            </td>
        </tr>
    {{/each}}

</table>