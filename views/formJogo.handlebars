{{#if jogo}}

<h1>Atualizar Cadastro</h1>
<form action="/jogos/{{jogo.id}}/atualizar" method="post">

{{else}}

<h1>Cadastre-se</h1>
<form action="/jogos/novo" method="post">

{{/if}}
    <div>
         <label for="titulo">Titulo: </label>
         <input type="text" id="titulo" name="titulo" value="{{jogo.titulo}}"></inpit>
     </div>
     <br/>
     <div>
         <label for="descricao">Descrição: </label>
         <input type="text" id="descricao" name="descricao" value="{{jogo.descricao}}"></inpit>
    </div>
    <br/>
     <div>
         <label for="precoBase">Preço: </label>
         <input type="text" id="precoBase" name="precoBase" value="{{jogo.orecoBase}}"></inpit>
    </div>
    <br/>
